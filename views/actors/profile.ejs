    <body>

        <h1>This is the profile for <%=actor.name%></h1>
    <form action="/actors/profile/<%=actor.id%>?_method=PUT" method="POST">
            Name: <input type="text" name="name" value="<%=actor.name%>" /><br> <br>
                  <input id="editButton" type="submit" value="Edit Profile"/><br></br>
       <br>

       <select name="movie">
        <% for ( let i = 0; i < movies.length; i++ ) {
            let selected = ( i == 0 ) ? "selected" : "";
        %>
            <option value="<%=movies[i].id%>" <%=selected%>><%=movies[i].name%>
            </option>
       <% } %>
    </select>

</form>



<h3>This Actor is associated with the following movies:</h3>
        <% for (let i=0; i< actor.Movies.length; i++){ %>
            <li>
               <%=actor.Movies[i].name%>
            </li>
            <br>
        <% } %>

       




       
    </body>
